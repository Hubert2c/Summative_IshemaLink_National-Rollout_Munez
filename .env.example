# IshemaLink Environment Variables
# Copy this file to .env and fill in your values before deploying.
# NEVER commit .env to version control.

# ── Django ────────────────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=CHANGE-ME-generate-with-python-secrets-token-hex-50
DEBUG=False
ALLOWED_HOSTS=ishemalink.rw www.ishemalink.rw localhost

# ── Database (PostgreSQL) ─────────────────────────────────────────────────────
DB_NAME=ishemalink
DB_USER=ishemalink
DB_PASSWORD=CHANGE-ME-strong-password
DB_HOST=pgbouncer
DB_PORT=5432

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── Mobile Money Gateways ─────────────────────────────────────────────────────
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
AIRTEL_MONEY_BASE_URL=https://openapi.airtel.africa

# ── Government APIs (use mock URLs for dev/staging) ──────────────────────────
RRA_EBM_BASE_URL=http://ebm-mock:8001
RURA_API_BASE_URL=http://rura-mock:8002
SMS_GATEWAY_URL=http://sms-mock:8003

# ── Monitoring ────────────────────────────────────────────────────────────────
GRAFANA_PASSWORD=CHANGE-ME-grafana-admin-password

# ── MinIO Backup (S3-compatible, on-premises) ─────────────────────────────────
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=CHANGE-ME
MINIO_SECRET_KEY=CHANGE-ME
MINIO_BUCKET=ishemalink-backups
